<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.Pane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #050505;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mailapp.Controller">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Text fill="WHITE" text="Приложение для запуска рассылки сообщений" textAlignment="CENTER">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Text>
            <Button fx:id="loadEmailsButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: #e86100; -fx-background-radius: 5;" text="Загрузить email-адреса" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="loadTemplateButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: #e86100; -fx-background-radius: 5;" text="Загрузить шаблон письма" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="startMailingButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: #e86100; -fx-background-radius: 5;" text="Запустить рассылку" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Pane prefHeight="1.0" prefWidth="200.0" style="-fx-background-color: #1a1a1a;">
               <VBox.margin>
                  <Insets left="200.0" right="200.0" top="50.0" />
               </VBox.margin>
            </Pane>
            <Text fill="WHITE" layoutX="340.0" layoutY="80.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Информация" textAlignment="CENTER" wrappingWidth="440.0">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>
            <Text fill="#9a9a9a" layoutX="497.0" layoutY="204.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Рассылка будет запущена на все почтовые адреса которые указаны в документе в выбранном файле." textAlignment="CENTER" wrappingWidth="600.0">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Text>

         </children>
      </VBox>
   </children>
</AnchorPane>